<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolashei"
        android:background="#3F51B5">

        <TextView
            android:id="@+id/title_actionbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text=""
            android:textColor="@color/textclor"
            android:textSize="22sp"/>

    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:id="@+id/info_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"

        android:text="Hello World!"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@color/background"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/home_linear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ima_home"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/home_selector"/>

            <TextView
                android:id="@+id/tv_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="首页"
                android:textColor="#8f8f8f"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/sousuo_linear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ima_sousuo"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/sousuo_selector"/>

            <TextView
                android:id="@+id/tv_sousuo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="快速检索"
                android:textColor="#8f8f8f"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/person_linear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ima_person"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/person_selector"/>

            <TextView
                android:id="@+id/tv_person"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="个人中心"
                android:textColor="#8f8f8f"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/other_linear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ima_other"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/other_selector"/>

            <TextView
                android:id="@+id/tv_other"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="其他"
                android:textColor="#8f8f8f"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
